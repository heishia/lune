# =============================================================================
# LUNE Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git!

# Environment
ENV=local
DEBUG=true

# Database (Supabase PostgreSQL)
# Get this from: Supabase Dashboard > Project Settings > Database > Connection string
# Format: postgresql+psycopg://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=

# Supabase Configuration
# Get these from: Supabase Dashboard > Project Settings > API
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# JWT Secret
# Generate a secure random string (e.g., openssl rand -hex 32)
JWT_SECRET=

# Admin Account
# Default admin credentials for initial setup
ADMIN_EMAIL=admin@lune.com
ADMIN_PASSWORD=

# Kakao OAuth (Optional)
# Get these from: Kakao Developers Console
KAKAO_REST_API_KEY=
KAKAO_CLIENT_SECRET=
KAKAO_REDIRECT_URI=http://localhost:5173/kakao/callback

# Application Settings
APP_NAME=LUNE API
APP_VERSION=0.1.0
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
